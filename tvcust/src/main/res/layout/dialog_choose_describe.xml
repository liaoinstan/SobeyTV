<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_describe_finish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hot_lay_item_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="完成任务"
            android:textColor="@color/sb_blue"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_describe_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hot_lay_item_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="申请援助"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_describe_bank"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hot_lay_item_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="反馈协助"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_describe_touser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hot_lay_item_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="反馈用户"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_describe_describe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/hot_lay_item_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="追加描述"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@drawable/line" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_dialog_describe_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/hot_lay_item_dark"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/sb_text_blank"
        android:textSize="@dimen/text_big" />

</LinearLayout>