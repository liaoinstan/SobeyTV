<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/sign_dialog_bk"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_subig"
            android:text="您有"/>

        <TextView
            android:id="@+id/text_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sb_blue"
            android:textSize="@dimen/text_subig"
            android:text="1543"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sb_text_blank"
            android:textSize="@dimen/text_subig"
            android:text="积分"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:lineSpacingExtra="5dp"
        android:text="持续签到，有更多惊喜等着你哟"
        android:textColor="@color/sb_text_blank"
        android:textSize="@dimen/text_nomal" />


    <TextView
        android:id="@+id/dialog_ok"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big"
        android:background="@drawable/hot_rect_corner_blue_full"
        android:text="立即签到"/>


</LinearLayout>