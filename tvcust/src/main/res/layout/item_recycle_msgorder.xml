<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="10dp"
    app:cardElevation="0dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_ordermsg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/cc_text_blank"
            android:textSize="@dimen/text_big_nomal"
            android:text="订单编号:685478954898" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_ordermsg_prog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="订单进度：订单完成，等待顾客确认"
                    android:textColor="@color/sb_text_dark"
                    android:textSize="@dimen/text_nomal"/>

                <TextView
                    android:id="@+id/text_ordermsg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:text="更新时间：2016-08-04 15:00"
                    android:textColor="@color/sb_text_dark"
                    android:textSize="@dimen/text_nomal"/>
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line"/>

        <LinearLayout
            android:id="@+id/lay_ordermsg_godetail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/icon_next_dark"
                android:text="查看"
                android:textColor="@color/sb_blue"
                android:textSize="@dimen/text_nomal"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>