<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sb_bk"
    android:fitsSystemWindows="true"
    tools:context="com.sobey.tvcust.ui.activity.EvaActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/icon_back"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/text_eva_complain"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="投诉"
                android:textColor="@color/sb_blue"
                android:textSize="@dimen/text_nomal" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/showingroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.liaoinstan.springview.widget.SpringView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:header="@layout/header_common"
            app:type="follow">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lay_eva_server"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="客服评价"
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="服务态度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_server_attitude"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="处理速度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_server_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flow_tag_serv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:layout_marginTop="22dp"
                            app:gravity="center"
                            app:max_select="-1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_eva_teach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="技术评价"
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="服务态度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_tech_attitude"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="处理速度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_tech_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="产品评价："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_tech_product"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flow_tag_tech"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:layout_marginTop="22dp"
                            app:gravity="center"
                            app:max_select="-1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_eva_headteach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="总公司技术评价"
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="服务态度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_headtech_attitude"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="处理速度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_headtech_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flow_tag_headtech"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:layout_marginTop="22dp"
                            app:gravity="center"
                            app:max_select="-1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_eva_develop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="总研发评价"
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="服务态度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_develop_attitude"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="处理速度："
                                android:textColor="@color/sb_text_blank"
                                android:textSize="@dimen/text_big_nomal" />

                            <RatingBar
                                android:id="@+id/rating_eva_develop_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:layout_marginRight="16dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/rating_bar"
                                android:stepSize="1" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/line" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flow_tag_develop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:layout_marginTop="22dp"
                            app:gravity="center"
                            app:max_select="-1" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white">

                        <com.sobey.common.view.EmojiEditText
                            android:id="@+id/edit_eva_describe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_rect_dark_line"
                            android:gravity="left|top"
                            android:hint="留下您的评价"
                            android:inputType="textMultiLine"
                            android:minLines="6"
                            android:padding="8dp"
                            android:textColor="@color/cc_text_blank"
                            android:textColorHint="@color/sb_text_dark"
                            android:textSize="@dimen/text_nomal_small" />

                    </FrameLayout>

                </LinearLayout>

            </ScrollView>

        </com.liaoinstan.springview.widget.SpringView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:background="@color/sb_bk_dark"-->
                <!--android:gravity="center"-->
                <!--android:text="提交评价"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/text_big" />-->

            <com.dd.CircularProgressButton
                android:id="@+id/btn_go"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big"
                app:cpb_colorIndicator="@color/sb_blue"
                app:cpb_colorIndicatorBackground="@color/sb_blue_hint_trans"
                app:cpb_colorProgress="#00000000"
                app:cpb_iconComplete="@drawable/ic_action_accept"
                app:cpb_iconError="@drawable/ic_action_cancel"
                app:cpb_selectorIdle="@drawable/idle_state_selector"
                app:cpb_textIdle="提交评价" />

        </FrameLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
