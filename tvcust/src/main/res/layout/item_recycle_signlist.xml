<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_gign_item_grades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_big_nomal"
        android:textColor="@color/sb_text_blank_deep"
        android:text="获得10积分"/>

    <TextView
        android:id="@+id/text_gign_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="24dp"
        android:textSize="@dimen/text_nomal"
        android:textColor="@color/sb_text_dark_blank"
        android:text="2016-06-15     14:21"/>

</LinearLayout>
