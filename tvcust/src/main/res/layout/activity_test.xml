<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sobey.tvcust.ui.activity.TestActivity">

    <Button
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="clear"
        android:layout_below="@+id/size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="启动APP"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/acache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="acache"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/size"
        android:layout_toEndOf="@+id/size"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="version"
        android:layout_alignBottom="@+id/clear"
        android:layout_alignLeft="@+id/acache"
        android:layout_alignStart="@+id/acache" />

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="share"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/acache"
        android:layout_toEndOf="@+id/acache"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="login"
        android:layout_alignTop="@+id/version"
        android:layout_alignRight="@+id/share"
        android:layout_alignEnd="@+id/share" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nettest"
        android:onClick="onClick"
        android:id="@+id/nettest"
        android:layout_below="@+id/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <com.sobey.common.view.EmojiEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/go"
        android:layout_alignEnd="@+id/go" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nettest"
        android:onClick="onClick"
        android:id="@+id/edit"
        android:layout_below="@+id/edittext"
        android:layout_toLeftOf="@+id/acache"
        android:layout_toStartOf="@+id/acache" />

</RelativeLayout>
