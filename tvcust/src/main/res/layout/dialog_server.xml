<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_rect_corner_white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/temp_server_dialog_bk"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/bk_server"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/temp_server_dialog_bk"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/eva_serv_header"
            android:id="@+id/img_server_dialog_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_nomal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="客服小希"
            android:layout_alignBottom="@+id/temp_server_dialog_bk"
            android:layout_toRightOf="@+id/img_server_dialog_header"
            android:layout_toEndOf="@+id/img_server_dialog_header" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/item_server_dialog_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/hot_lay_item_white_fade"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_blank"
            android:text="客服电话"/>

        <TextView
            android:id="@+id/text_server_dialog_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_dark_blank"
            android:text="15684562132"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/line"/>

    <LinearLayout
        android:id="@+id/item_server_dialog_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/hot_lay_item_white_fade"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_blank"
            android:text="客服QQ"/>

        <TextView
            android:id="@+id/text_server_dialog_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_dark_blank"
            android:text="564841256"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/line"/>

    <LinearLayout
        android:id="@+id/item_server_dialog_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/hot_lay_item_white_fade"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_blank"
            android:text="客服邮箱"/>

        <TextView
            android:id="@+id/text_server_dialog_mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_nomal"
            android:textColor="@color/sb_text_dark_blank"
            android:text="564841256@qq.com"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_nomal"
        android:textColor="@color/sb_text_dark"
        android:text="点击可复制信息"/>

</LinearLayout>