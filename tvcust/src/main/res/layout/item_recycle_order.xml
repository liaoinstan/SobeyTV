<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/text_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/cc_text_blank"
            android:textSize="@dimen/text_small"
            android:text="订单编号:685478954898" />

            <TextView
                android:id="@+id/text_order_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/cc_text_dark"
                android:textSize="@dimen/text_small"
                android:text="2016-06-27" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/img_order_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:background="@color/sb_bk_light"
                android:src="@drawable/icon_order_fix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:background="@color/sb_bk_light"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_order_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="硬件问题：CPU过载报警"
                    android:textColor="@color/sb_text_blank"
                    android:textSize="@dimen/text_nomal"/>

                <TextView
                    android:id="@+id/text_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="正在派单"
                    android:textColor="@color/sb_blue"
                    android:textSize="@dimen/text_nomal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="right">

            <TextView
                android:id="@+id/text_order_cancle"
                android:textColor="@color/sb_text_dark"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_none_line"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="取消订单" />

            <TextView
                android:id="@+id/text_order_cui"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="催一催" />

            <TextView
                android:id="@+id/text_order_allocate"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="订单分配" />

            <TextView
                android:id="@+id/text_order_eva"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="立即评价" />

            <TextView
                android:id="@+id/text_order_finish"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="处理完成" />

            <TextView
                android:id="@+id/text_order_go"
                android:textColor="@color/white"
                android:textSize="@dimen/text_nomal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/shape_rect_corner_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="查看订单" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>